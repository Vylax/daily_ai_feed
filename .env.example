# --- Gemini API ---
# Option 1: Direct API Key
GEMINI_API_KEY=your_api_key_here

# Option 2: Path to Service Account JSON key (alternative to direct API key)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# --- RSS Feeds ---
# Comma-separated list of RSS feed URLs
RSS_FEEDS=https://example.com/feed1.xml,https://example.com/feed2.xml

# --- Processing Configuration ---
# Number of top overall items to summarize
NUM_NEWS_ITEMS_TO_SUMMARIZE=7

# Number of top tutorial items from feeds to include
NUM_FEED_TUTORIALS_TO_INCLUDE=5

# Initial list of tutorial topics (comma-separated)
INITIAL_TUTORIAL_TOPICS=Topic1,Topic2,Topic3

# --- Email Configuration ---
# Email provider: 'smtp' or 'sendgrid' (choose one)
EMAIL_PROVIDER=smtp

# Recipient and sender details
RECIPIENT_EMAIL=recipient@example.com
SENDER_EMAIL=sender@example.com
EMAIL_SUBJECT_PREFIX=[AI Digest]

# SMTP Settings (required if EMAIL_PROVIDER=smtp)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=username@example.com  # Often the same as SENDER_EMAIL
SMTP_PASSWORD=your_password_here    # Use app password for services like Gmail

# SendGrid Settings (required if EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your_sendgrid_api_key_here 